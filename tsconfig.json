{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib": [
      "dom",
      "es2016"
    ],
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./build/",
    "jsx": "react",
    "noImplicitAny": false
  },
  "include": [
    "browser/**/*.ts",
    "browser/**/*.tsx",
    "server/**/*.ts",
    "selenium/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}